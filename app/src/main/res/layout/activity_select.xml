<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626"
    android:orientation="vertical"
    tools:context=".SelectActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="#404040"
            android:gravity="center"
            android:text="主 页"
            android:textColor="#ffffff"
            android:textSize="22dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageViewLine"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingLeft="-15pt"
            android:paddingTop="50dp"
            android:src="@drawable/device_line" />

        <ImageView
            android:id="@+id/imageViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/zigbee" />

        <Button
            android:id="@+id/button3"
            android:layout_width="225.5dp"
            android:layout_height="60dp"
            android:layout_below="@+id/imageViewTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="44dp"
            android:background="@drawable/icon_chazuo"
            android:onClick="onToSockButtonDown" />

        <Button
            android:id="@+id/button4"
            android:layout_width="225.5dp"
            android:layout_height="60dp"
            android:layout_below="@+id/button3"
            android:layout_alignStart="@+id/button3"
            android:layout_marginTop="25dp"
            android:background="@drawable/icon_door" />

        <Button
            android:id="@+id/button5"
            android:layout_width="225.5dp"
            android:layout_height="60dp"
            android:layout_below="@+id/button4"
            android:layout_alignStart="@+id/button4"
            android:layout_marginTop="25dp"
            android:background="@drawable/icon_temp"
            android:onClick="onToHumitureButtonDown" />

        <Button
            android:id="@+id/button6"
            android:layout_width="225.5dp"
            android:layout_height="60dp"
            android:layout_below="@+id/button5"
            android:layout_alignStart="@+id/button5"
            android:layout_marginTop="25dp"
            android:background="@drawable/icon_infrared"
            android:onClick="onToIrButtonDown" />
    </RelativeLayout>
</LinearLayout>